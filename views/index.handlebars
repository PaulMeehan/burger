<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h1>Eat Da Burger!</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <ul>
                {{#each burger}}
                    {{#unless devoured}}
                        {{!-- {{>burgers/single-burger devoured=false}} --}}
                        <li>
                            {{burger_name}}
                        
                            <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
                                {{#if devoured}}Put it back!{{else}}Devoure it!{{/if}}
                            </button>
                        
                        </li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-6">
            <ul>
                {{#each burger}}
                    {{#if devoured}}
                        {{!-- {{>burgers/single-burger devoured=false}} --}}
                        <li>
                            {{burger_name}}
                    
                            <button class="change-devoured" data-id="{{id}}" data-newdevoured="{{devoured}}">
                                {{#if devoured}}Put it back!{{else}}Devoure it!{{/if}}
                            </button>
                    
                        </li>
                    {{/if}}
                {{/each}}
            </ul>        </div>
    </div>
    <div class="row">
        <div class="col-sm-4">
            {{!-- blank --}}
        </div>
        <div class="col-sm-4">
            <h2>Add a new burger:</h2>

            <form class="create-form">

                <div class="form-group">
                    <label for="newBurger">Burger name:</label>
                    <input type="text" id="newBurger" name="burger_name">
                </div>

                <button type="submit">Add Burger</button>
            </form>
        </div>
        <div class="col-sm-4">
            {{!-- blank --}}
        </div>
    </div>
</div>